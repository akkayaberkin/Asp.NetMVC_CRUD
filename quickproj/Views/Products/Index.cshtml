@model IEnumerable<quickproj.Models.Product>

@{
    ViewBag.Title = "Index";
}



<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductProperties)
    </td>

    <td>
        @Html.ActionLink("Düzenle", "Edit", new { id = item.productid }) |
        @Html.ActionLink("Detay", "Details", new { id = item.productid }) |
        @Html.ActionLink("Sil", "Delete", new { id = item.productid })
    </td>
</tr>
}

</table>
